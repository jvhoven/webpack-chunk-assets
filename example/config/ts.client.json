{
	"compilerOptions": {
    "resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es2015",
    "jsx": "react",
    "strict": false,
		"lib": ["es2015", "dom"]
  },
  "include": [
    "../src/client/index.tsx",
    "../src/shared/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}